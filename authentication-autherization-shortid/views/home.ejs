<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home-page</title>
</head>
<body>
    <h1>URL Shortner</h1>
    <form method="post" action="/url/generate">
        <h3>Enter your URL here</h3>
        <input type="text" placeholder="eg.example.com" name="url">
        <button type="submit">Generate</button>
    </form>
    <% if (locals.id) { %>
     <p>http://localhost:8001/url/<%= id %></p>
    <% } %>
    <br>
    <% if (locals.urls) { %>
        <table>
            <thead>
                <th>sr.No</th>
                <th>originalURL</th>
                <th>shortID</th>
                <th>TotalVisits</th>
            </thead>
            <tbody>
                <% urls.forEach((url, i) => { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.shortURL %></td>
                        <td><%= url.visitList.length %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</body>
</html>